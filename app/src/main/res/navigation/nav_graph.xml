<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreen">

    <fragment
        android:id="@+id/splashScreen"
        android:name="com.example.ryder.ui.main.SplashScreenFragment"
        android:label="splash screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreen_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_splashScreen_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.ryder.ui.main.LoginFragment"
        android:label="login screen"
        tools:layout="@layout/fragment_login"/>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.ryder.ui.main.ChatFragment"
        android:label="chat screen"
        tools:layout="@layout/fragment_chat"/>


</navigation>