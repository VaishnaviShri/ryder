<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.student.studentLiveCabDetails.StudentLiveCabDetailsFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live Cab Details"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/studentLiveCabsDetailsText"/>
    <include
        android:id="@+id/studentLiveCabDetail"
        layout="@layout/livecab_details_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/studentLiveCabsDetailsText"
        android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/studentLiveCabJoinBtn"
            android:layout_below="@+id/studentLiveCabDetail"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:text="Join" />
        <Button
            android:id="@+id/studentLiveCabChatBtn"
            android:layout_below="@+id/studentLiveCabJoinBtn"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:text="Chat" />
        <Button
            android:id="@+id/paymentBtn"
            android:layout_below="@+id/studentLiveCabChatBtn"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:text="Pay with UPI" />
    </RelativeLayout>

</FrameLayout>